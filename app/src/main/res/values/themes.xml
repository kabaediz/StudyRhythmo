<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.StudyRhythmo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- ── Primary — Indigo ── -->
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/indigo_100</item>
        <item name="colorOnPrimaryContainer">@color/indigo_900</item>
        <item name="colorPrimaryInverse">@color/indigo_200</item>

        <!-- ── Secondary — Emerald ── -->
        <item name="colorSecondary">@color/emerald_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/emerald_100</item>
        <item name="colorOnSecondaryContainer">@color/emerald_900</item>

        <!-- ── Tertiary — Amber ── -->
        <item name="colorTertiary">@color/amber_500</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/amber_100</item>
        <item name="colorOnTertiaryContainer">@color/amber_900</item>

        <!-- ── Error ── -->
        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/red_100</item>
        <item name="colorOnErrorContainer">@color/red_900</item>

        <!-- ── Background / Surface ── -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/slate_800</item>
        <item name="colorSurface">@color/slate_50</item>
        <item name="colorOnSurface">@color/slate_800</item>
        <item name="colorSurfaceVariant">@color/slate_100</item>
        <item name="colorOnSurfaceVariant">@color/slate_500</item>
        <item name="colorSurfaceInverse">@color/slate_800</item>
        <item name="colorOnSurfaceInverse">@color/slate_100</item>

        <!-- ── Outline ── -->
        <item name="colorOutline">@color/slate_300</item>
        <item name="colorOutlineVariant">@color/slate_200</item>

        <!-- ── Status bar ── -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- ── Shape: 16dp cards, 28dp FAB ── -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.StudyRhythmo.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.StudyRhythmo.Large</item>
    </style>

    <!-- Card corners: 16dp -->
    <style name="ShapeAppearance.StudyRhythmo.Medium" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- FAB corners: 28dp -->
    <style name="ShapeAppearance.StudyRhythmo.Large" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <!-- Section label style -->
    <style name="TextAppearance.StudyRhythmo.SectionLabel" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.08</item>
    </style>
</resources>
