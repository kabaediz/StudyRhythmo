<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.studyrhythmo.feature.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.studyrhythmo.feature.schedule.ScheduleFragment"
        android:label="Schedule"
        tools:layout="@layout/fragment_schedule">

        <action
            android:id="@+id/action_schedule_to_addEditCourse"
            app:destination="@id/addEditCourseFragment" />

    </fragment>

    <fragment
        android:id="@+id/addEditCourseFragment"
        android:name="com.studyrhythmo.feature.schedule.AddEditCourseFragment"
        android:label="Add / Edit Course"
        tools:layout="@layout/fragment_add_edit_course">

        <argument
            android:name="courseId"
            app:argType="long"
            android:defaultValue="-1" />

    </fragment>

    <fragment
        android:id="@+id/tasksFragment"
        android:name="com.studyrhythmo.feature.tasks.TasksFragment"
        android:label="Tasks"
        tools:layout="@layout/fragment_tasks">

        <action
            android:id="@+id/action_tasks_to_addEditTask"
            app:destination="@id/addEditTaskFragment" />

    </fragment>

    <fragment
        android:id="@+id/addEditTaskFragment"
        android:name="com.studyrhythmo.feature.tasks.AddEditTaskFragment"
        android:label="Add / Edit Task"
        tools:layout="@layout/fragment_add_edit_task">

        <argument
            android:name="taskId"
            app:argType="long"
            android:defaultValue="-1" />

    </fragment>

    <fragment
        android:id="@+id/studyFragment"
        android:name="com.studyrhythmo.feature.study.StudyFragment"
        android:label="Study"
        tools:layout="@layout/fragment_study">

        <action
            android:id="@+id/action_study_to_timer"
            app:destination="@id/timerFragment" />

        <action
            android:id="@+id/action_study_to_addEditSession"
            app:destination="@id/addEditSessionFragment" />

    </fragment>

    <fragment
        android:id="@+id/timerFragment"
        android:name="com.studyrhythmo.feature.study.TimerFragment"
        android:label="Timer"
        tools:layout="@layout/fragment_timer">

        <argument
            android:name="sessionId"
            app:argType="long"
            android:defaultValue="-1" />

        <argument
            android:name="durationMinutes"
            app:argType="integer"
            android:defaultValue="25" />

    </fragment>

    <fragment
        android:id="@+id/addEditSessionFragment"
        android:name="com.studyrhythmo.feature.study.AddEditSessionFragment"
        android:label="Add Study Session"
        tools:layout="@layout/fragment_add_edit_session" />

    <fragment
        android:id="@+id/notesFragment"
        android:name="com.studyrhythmo.feature.notes.NotesFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_notes">

        <action
            android:id="@+id/action_notes_to_addEditNote"
            app:destination="@id/addEditNoteFragment" />

    </fragment>

    <fragment
        android:id="@+id/addEditNoteFragment"
        android:name="com.studyrhythmo.feature.notes.AddEditNoteFragment"
        android:label="Add / Edit Note"
        tools:layout="@layout/fragment_add_edit_note">

        <argument
            android:name="noteId"
            app:argType="long"
            android:defaultValue="-1" />

    </fragment>

</navigation>
