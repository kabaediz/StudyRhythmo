<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.StudyRhythmo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- ── Primary — Indigo (lighter for dark) ── -->
        <item name="colorPrimary">@color/indigo_400</item>
        <item name="colorOnPrimary">@color/indigo_900</item>
        <item name="colorPrimaryContainer">@color/indigo_800</item>
        <item name="colorOnPrimaryContainer">@color/indigo_200</item>
        <item name="colorPrimaryInverse">@color/indigo_600</item>

        <!-- ── Secondary — Emerald (lighter for dark) ── -->
        <item name="colorSecondary">@color/emerald_400</item>
        <item name="colorOnSecondary">@color/emerald_900</item>
        <item name="colorSecondaryContainer">@color/emerald_800</item>
        <item name="colorOnSecondaryContainer">@color/emerald_200</item>

        <!-- ── Tertiary — Amber (lighter for dark) ── -->
        <item name="colorTertiary">@color/amber_400</item>
        <item name="colorOnTertiary">@color/amber_900</item>
        <item name="colorTertiaryContainer">@color/amber_700</item>
        <item name="colorOnTertiaryContainer">@color/amber_100</item>

        <!-- ── Error ── -->
        <item name="colorError">@color/red_400</item>
        <item name="colorOnError">@color/red_900</item>
        <item name="colorErrorContainer">@color/red_700</item>
        <item name="colorOnErrorContainer">@color/red_100</item>

        <!-- ── Background / Surface ── -->
        <item name="android:colorBackground">@color/slate_950</item>
        <item name="colorOnBackground">@color/slate_100</item>
        <item name="colorSurface">@color/slate_900</item>
        <item name="colorOnSurface">@color/slate_100</item>
        <item name="colorSurfaceVariant">@color/slate_800</item>
        <item name="colorOnSurfaceVariant">@color/slate_400</item>
        <item name="colorSurfaceInverse">@color/slate_100</item>
        <item name="colorOnSurfaceInverse">@color/slate_800</item>

        <!-- ── Outline ── -->
        <item name="colorOutline">@color/slate_600</item>
        <item name="colorOutlineVariant">@color/slate_700</item>

        <!-- ── Status bar (dark) ── -->
        <item name="android:statusBarColor">@color/slate_950</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- ── Shape ── -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.StudyRhythmo.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.StudyRhythmo.Large</item>
    </style>
</resources>
